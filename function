#include <iostream>
using namespace std;

int kuis(string pertanyaan, string opsiA, string opsiB, string opsiC, string opsiD, char jawabanbenar){
    char jawabanpengguna;
    
    cout << pertanyaan << endl;
    cout << "A. " << opsiA << endl;
    cout << "B. " << opsiB << endl;
    cout << "C. " << opsiC << endl;
    cout << "D. " << opsiD << endl;
    
    cout << "Pilih jawaban anda (A/B/C/D)" << endl;
    cin >> jawabanpengguna;
    
    if (toupper(jawabanpengguna) == toupper(jawabanbenar)){
        cout << "Jawaban anda benar" << endl;
        return 1;
    } else {
        cout << "Jawaban anda salah, jawaban yang benar adalah " << jawabanbenar << endl;
        return 0;
    }
    
}
int main(){
int skor = 0;
int benar = 0;

benar += kuis ("Tahun berapa Indonesia merdeka?", "1900", "1800", "1945", "2000", 'C');
benar += kuis ("Apa nama hama yang biasa terdapat pada rambut?", "kutu", "kumbang", "belalang", "katak", 'A');
benar += kuis ("Siapa presiden ke-2 republik indonesia?", "moh. hatta", "Soeha'rto", "megawati", "kaesang", 'B');
benar += kuis ("Negara pertama yang menerima kemerdekaan indonesia?", "austria", "inggris", "jepang", "mesir", 'D');
benar += kuis ("Agama terbanyak yang di anut di indonesia adalah?", "islam", "katolik", "budha", "hindu", 'A');

if (benar == 0){
    cout << "Yahh, jawaban kamu belum ada yang benar." << endl;
}else{
    cout << "Selamat! kamu menjawab x soal secara benar." << endl;
}
skor = benar * 20;
cout << "Skor kamu adalah : " << skor;
    return 0;
}
